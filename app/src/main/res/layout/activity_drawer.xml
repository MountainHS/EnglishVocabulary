<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/activity_drawer"
    android:orientation="vertical"
    android:layout_gravity="left">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_color">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/main_color"
            android:text="영단어 암기장" />

        <Button
            android:id="@+id/button_close_drawer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="X"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2ffe8"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_gomain"
            android:layout_width="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/light_gray"
            android:layout_height="wrap_content"
            android:textColor="#6c8e5e"
            android:text="메인 화면으로"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/button_gowordlist"
            android:layout_width="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/light_gray"
            android:layout_height="wrap_content"
            android:textColor="#6c8e5e"
            android:text="단어리스트 화면으로"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/button_gotest"
            android:layout_width="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/light_gray"
            android:layout_height="wrap_content"
            android:textColor="#6c8e5e"
            android:text="Test 화면으로"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/button_gogame"
            android:layout_width="match_parent"
            android:gravity="center"
            android:backgroundTint="@color/light_gray"
            android:layout_height="wrap_content"
            android:textColor="#6c8e5e"
            android:text="Game 화면으로"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
</LinearLayout>