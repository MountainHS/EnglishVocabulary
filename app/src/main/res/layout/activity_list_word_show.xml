<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/layout_word_list_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:clickable="true">

        <TextView
            android:id="@+id/textview_english_word_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="word"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_korean_word_list1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="word"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textview_korean_word_list2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="word"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textview_korean_word_list3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="word"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_isMem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>