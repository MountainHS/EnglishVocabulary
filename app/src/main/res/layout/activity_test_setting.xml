<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <!--위에 명령어 바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color"
            android:gravity="center|left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_openDrawerWithTestSetting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:backgroundTint="@color/white"
                android:text="Test setting"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Test Setting"
                    android:textColor="@color/black"
                    android:textSize="45dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="3"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="단어 설정"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:gravity="center_vertical"/>

                <RadioGroup
                    android:id="@+id/radiogroup_set"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/radiobutton_myword"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:text="전체"
                        android:textColor="@color/black"
                        android:textSize="30dp"/>
                    <RadioButton
                        android:id="@+id/radiobutton_myword2"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:text="암기"
                        android:textColor="@color/black"
                        android:textSize="30dp" />
                    <RadioButton
                        android:id="@+id/radiobutton_myword3"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:text="미암기"
                        android:textColor="@color/black"
                        android:textSize="30dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:weightSum="4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="문제 수 : "
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edittext_numberoftest"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:hint="숫자 입력 또는 버튼 선택"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray"
                    android:textSize="25dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_plus10test"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:backgroundTint="@color/light_gray"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button_plus20test"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:backgroundTint="@color/light_gray"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button_plus50test"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:backgroundTint="@color/light_gray"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="50"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button_plusMAXtest"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:backgroundTint="@color/light_gray"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="MAX"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="5"
                android:gravity="center">
                <Button
                    android:id="@+id/button_startTest"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/light_gray"
                    android:text="확인"
                    android:textColor="@color/black"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/activity_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>